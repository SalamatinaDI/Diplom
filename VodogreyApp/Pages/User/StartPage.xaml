<Page x:Class="VodogreyApp.Pages.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VodogreyApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="  Введите логин:" Margin="5"/>
        <TextBox Grid.Row="1" Margin="5" x:Name="TbLogin"/>
        <TextBlock Text="  Введите пароль:" Grid.Row="2" Margin="5"/>
        <PasswordBox Grid.Row="3" Margin="5" x:Name="TbPass"/>
        <Button Grid.Row="4" Content="Вход" Margin="5" Click="UserClick"/>
        <Button Grid.Row="5" Content="Войти как администратор" Margin="10" BorderBrush="Transparent" Background="Transparent" Height="20" Width="150" Click="AdminStartClick"/>
    </Grid>
</Page>
